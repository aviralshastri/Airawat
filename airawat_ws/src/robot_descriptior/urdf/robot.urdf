<?xml version="1.0"?>
<robot name="minimal_cartographer_robot">

  <link name="base_link"/>

  <!-- IMU: 28 cm above base_link -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.28" rpy="0 0 0"/>
  </joint>
  <link name="imu_link"/>

  <!-- LiDAR: 18 cm above base_link -->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0 0 0.18" rpy="3.141592653589793 0 0"/>
  </joint>
  <link name="laser_link"/>

</robot>
