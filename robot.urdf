<?xml version="1.0"?><robot name="robot">  <!-- ================= BASE LINK ================= -->  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1 1 1" />
      </geometry>
      <material name="base_color">
        <color rgba="0.06 0.44 0.64 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1 1 1" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1.0" />
      <inertia
        ixx="0.1666667" ixy="0" ixz="0"
        iyy="0.1666667" iyz="0"
        izz="0.1666667" />
    </inertial>
  </link>  <!-- ================= IMU LINK ================= -->  <!-- IMU is centered, facing forward, REP-103 compliant -->  <joint name="base_link_to_imu_link" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.034 0.048 0.016" />
      </geometry>
      <material name="imu_color">
        <color rgba="0.19 0.27 0.89 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.034 0.048 0.016" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.25" />
      <!-- Correct box inertia -->
      <inertia
        ixx="0.000058" ixy="0" ixz="0"
        iyy="0.000036" iyz="0"
        izz="0.000071" />
    </inertial>
  </link>  <!-- ================= LIDAR LINK ================= -->  <!-- LiDAR is upside down: rotate 180 deg around X --><joint name="base_link_to_laser_link" type="fixed">
<parent link="base_link" />
<child link="laser_link" />
<!-- LiDAR is upside-down AND zero-angle faces backward:
     rotate 180 deg around X (upright) and 180 deg around Z (forward) -->
<origin xyz="0 0 0" rpy="3.141592653589793 0 3.141592653589793" />

  </joint>  <link name="laser_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.0494" length="0.035" />
      </geometry>
      <material name="lidar_color">
        <color rgba="0.30 0.30 0.30 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.0494" length="0.035" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.017" />
      <!-- Approximate cylinder inertia -->
      <inertia
        ixx="0.000011" ixy="0" ixz="0"
        iyy="0.000011" iyz="0"
        izz="0.000020" />
    </inertial>
  </link></robot>